<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml"
    fx:controller="tecinfo.poo.model.GameController">
    <Label fx:id="playerNameLabel" style="-fx-font-size: 18;"/>
    <HBox alignment="CENTER" spacing="20">
        <ImageView fx:id="dice1ImageView" fitWidth="100" fitHeight="100"/>
        <ImageView fx:id="dice2ImageView" fitWidth="100" fitHeight="100"/>
    </HBox>
    <Label fx:id="resultLabel" style="-fx-font-size: 24;"/>
    <Button text="Jogar Dados" onAction="#handleRollDice"/>
    <Button text="Voltar" onAction="#handleBackToStart"/>
</VBox>